{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
		  	"plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
		"no-use-before-define": "off",
		"@typescript-eslint/no-use-before-define": [
			"error"
		],
		"import/extensions": [
			"error",
			"ignorePackages",
			{
			  "ts": "never"
			}
		 ]
    },
	 "settings": {
		"import/resolver": {
		  "typescript": {}
		}
	 }
}
